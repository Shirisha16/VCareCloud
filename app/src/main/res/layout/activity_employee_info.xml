<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmployeeInfo">
    <RelativeLayout
        android:id="@+id/re1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/teal_200">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="7dp"
            android:src="@drawable/ic_baseline_chevron_left_24" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/customer_profilepic"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:elevation="2dp"
        android:src="@drawable/person"
        android:scaleType="fitCenter"
        app:civ_border_color="#fff"
        app:civ_border_width="2dp" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/customer_profilepic">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/firstName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="First Name : "
                        android:textColor="@color/purple_700" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginTop="5dp"
                        android:textSize="16sp"
                        android:layout_below="@id/firstName"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/firstName1"/>

                    <View
                        android:id="@+id/v1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/firstName1"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="3dp"
                        android:background="#33000000" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/lastName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/v1"
                        android:layout_marginLeft="10dp"
                        android:text="Last Name : "
                        android:textColor="@color/purple_700" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="16sp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"
                        android:layout_below="@id/lastName"
                        android:id="@+id/lastName1"/>

                    <View
                        android:id="@+id/v2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/lastName1"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="3dp"
                        android:background="#33000000" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/v2"
                        android:layout_marginLeft="10dp"
                        android:text="Gender : "
                        android:textColor="@color/purple_700" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="16sp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"
                        android:layout_below="@id/gender"
                        android:id="@+id/gender1"/>

                    <View
                        android:id="@+id/v3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/gender1"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="3dp"
                        android:background="#33000000" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/dob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/v3"
                        android:textColor="@color/purple_700"
                        android:layout_marginLeft="10dp"
                        android:text="Date of Birth : "/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="16sp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"
                        android:layout_below="@id/dob"
                        android:id="@+id/dob1"/>

                    <View
                        android:id="@+id/v4"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/dob1"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="3dp"
                        android:background="#33000000" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/designation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/v4"
                        android:layout_marginLeft="10dp"
                        android:text="Designation : "
                        android:textColor="@color/purple_700" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="16sp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"
                        android:layout_below="@id/designation"
                        android:id="@+id/designation1"/>

                    <View
                        android:id="@+id/v5"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/designation1"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="3dp"
                        android:background="#33000000" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/security"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/v5"
                        android:layout_marginLeft="10dp"
                        android:text="Security profile : "
                        android:textColor="@color/purple_700" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="16sp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"
                        android:layout_below="@id/security"
                        android:id="@+id/security1"/>

                    <View
                        android:id="@+id/v6"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/security1"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="3dp"
                        android:background="#33000000" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/shift"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/v6"
                        android:layout_marginLeft="10dp"
                        android:text="Shift : "
                        android:textColor="@color/purple_700" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="16sp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"
                        android:layout_below="@id/shift"
                        android:id="@+id/shift1"/>

                    <View
                        android:id="@+id/v7"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/shift1"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="3dp"
                        android:background="#33000000" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/date_of_joining"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/v7"
                        android:layout_marginLeft="10dp"
                        android:text="Date of Joining : "
                        android:textColor="@color/purple_700" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="16sp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"
                        android:layout_below="@id/date_of_joining"
                        android:id="@+id/date_of_joining1"/>

                    <View
                        android:id="@+id/v8"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/date_of_joining1"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="3dp"
                        android:background="#33000000" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/date_of_leaving"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/v8"
                        android:layout_marginLeft="10dp"
                        android:text="Date of leaving : "
                        android:textColor="@color/purple_700" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="16sp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"
                        android:layout_below="@id/date_of_leaving"
                        android:id="@+id/date_of_leaving1"/>

                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <RelativeLayout
        android:id="@+id/progressLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey"
        android:layout_below="@id/re1"
        android:visibility="gone">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>


</RelativeLayout>