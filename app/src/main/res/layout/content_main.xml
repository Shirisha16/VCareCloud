<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Dashboard"
    tools:showIn="@layout/app_bar_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rl_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/ll_employeeList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/empCountCard"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            card_view:cardCornerRadius="10dp"
                            card_view:cardElevation="2dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true">

                                    <ImageView
                                        android:id="@+id/empImage"
                                        android:layout_width="70dp"
                                        android:layout_height="50dp"
                                        android:layout_marginTop="25dp"
                                        android:layout_centerHorizontal="true"
                                        android:src="@drawable/employees" />

                                    <TextView
                                        android:id="@+id/empCount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/empImage"
                                        android:layout_centerHorizontal="true"
                                        android:text="Employees Count"
                                        android:textSize="14dp" />

                                    <TextView
                                        android:id="@+id/employeesCount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/empCount"
                                        android:layout_centerHorizontal="true"
                                        android:text=""
                                        android:textColor="@color/black"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />
                                </RelativeLayout>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/childrenCountCard"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            card_view:cardCornerRadius="10dp"
                            card_view:cardElevation="2dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true">

                                    <ImageView
                                        android:id="@+id/childrenImage"
                                        android:layout_width="70dp"
                                        android:layout_height="50dp"
                                        android:layout_marginTop="25dp"
                                        android:layout_centerHorizontal="true"
                                        android:src="@drawable/children" />

                                    <TextView
                                        android:id="@+id/childrenCount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/childrenImage"
                                        android:layout_centerHorizontal="true"
                                        android:text="Children Count"
                                        android:textSize="14dp" />

                                    <TextView
                                        android:id="@+id/childCount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/childrenCount"
                                        android:layout_centerHorizontal="true"
                                        android:text=""
                                        android:textColor="@color/black"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />
                                </RelativeLayout>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_programList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_employeeList"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/programsCountCard"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            card_view:cardCornerRadius="10dp"
                            card_view:cardElevation="2dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true">

                                    <ImageView
                                        android:id="@+id/programsImage"
                                        android:layout_width="70dp"
                                        android:layout_height="50dp"
                                        android:layout_marginTop="25dp"
                                        android:layout_centerHorizontal="true"
                                        android:src="@drawable/programs" />

                                    <TextView
                                        android:id="@+id/programsCount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/programsImage"
                                        android:layout_centerHorizontal="true"
                                        android:text="Programs Count"
                                        android:textSize="14dp" />

                                    <TextView
                                        android:id="@+id/programCount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/programsCount"
                                        android:layout_centerHorizontal="true"
                                        android:text=""
                                        android:textColor="@color/black"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />
                                </RelativeLayout>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/waitCountCard"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            card_view:cardCornerRadius="10dp"
                            card_view:cardElevation="2dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true">

                                    <ImageView
                                        android:id="@+id/waitImage"
                                        android:layout_width="70dp"
                                        android:layout_height="50dp"
                                        android:layout_marginTop="25dp"
                                        android:layout_centerHorizontal="true"
                                        android:src="@drawable/wait_list" />

                                    <TextView
                                        android:id="@+id/waitCount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/waitImage"
                                        android:layout_centerHorizontal="true"
                                        android:text="WaitList Count"
                                        android:textSize="14dp" />

                                    <TextView
                                        android:id="@+id/waitListCount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/waitCount"
                                        android:layout_centerHorizontal="true"
                                        android:text=""
                                        android:textColor="@color/black"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />
                                </RelativeLayout>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/empHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_programList"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Checked In Child"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/eventsCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/empHeading"
                    android:layout_margin="10dp"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="10dp">



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:padding="2dp"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginBottom="5dp"
                            android:text="Name"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/checkTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="15dp"
                            android:layout_marginBottom="5dp"
                            android:text="Check-in-Time"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <View
                            android:id="@+id/v1"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_below="@id/name"
                            android:background="#c0c0c0" />

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/v1"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/red" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/checkRecycler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/v1"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="5dp">


                        </androidx.recyclerview.widget.RecyclerView>
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/birthdayHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/eventsCard"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Upcoming Birthday"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/birthdayCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/birthdayHeading"
                    android:layout_margin="10dp"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:padding="2dp"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/birthdayName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginBottom="5dp"
                            android:text="Name"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/birthday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="15dp"
                            android:layout_marginBottom="5dp"
                            android:text="Birthday"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <View
                            android:id="@+id/birthdayV1"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_below="@id/birthdayName"
                            android:background="#c0c0c0" />

                        <TextView
                            android:id="@+id/text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_below="@+id/birthdayV1"
                            android:text=""
                            android:textColor="@color/red" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/birthdayRecycler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/birthdayV1"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="5dp"
                            app:layout_behavior="@string/appbar_scrolling_view_behavior">

                        </androidx.recyclerview.widget.RecyclerView>
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>
            </RelativeLayout>
        </RelativeLayout>

    </ScrollView>
</RelativeLayout>