<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<ImageView
    android:id="@+id/profile"
    android:layout_width="35dp"
    android:layout_height="35dp"
    android:layout_marginTop="5dp"
    android:src="@drawable/person"
    android:layout_marginLeft="5dp" />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_below="@id/profile"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp" />
    <TextView
        android:id="@+id/childName1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile"
        android:layout_marginTop="5dp"
        android:text="Aadya A"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true" />
    <TextView
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:layout_below="@id/name"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:textSize="14sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/gender1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/childName1"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:text="Male"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp" />
    <TextView
        android:id="@+id/dob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date of Birth"
        android:layout_below="@id/gender"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:textSize="14sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/dob1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/gender1"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:text="26 Sep 2007"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp" />
    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:layout_below="@id/dob"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:textSize="14sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/address1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/dob1"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:text="Hyderabad"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp" />
    <TextView
        android:id="@+id/guardian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardian"
        android:layout_below="@id/address"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp" />
    <TextView
        android:id="@+id/guardian1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/address1"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:text="Aadya A"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/guardian"
        android:weightSum="2"
        >

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/enroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_back"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_weight="1"
        android:text="Enroll"
        android:textAllCaps="false"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:layout_marginBottom="8dp"
        android:background="@drawable/remove_back"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:text="Remove"
        android:textAllCaps="false"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp" />
    </LinearLayout>


</RelativeLayout>
    <RelativeLayout
        android:id="@+id/progressLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>